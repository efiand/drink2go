<form class="catalog" action="https://echo.htmlacademy.ru">
  <div class="filters">
    <fieldset class="filters__set">
      <legend class="filters__title">Цена</legend>

      <div class="range">
        <div class="range__target"></div>

        <p class="range__fields">
          <label>
            <input
              class="field"
              name="price_from"
              type="number"
              min="0"
              max="1000"
              step="50"
              placeholder="0"
            />
          </label>
          <label>
            <input
              class="field"
              name="price_to"
              type="number"
              min="0"
              max="1000"
              step="50"
              value="900"
              placeholder="1000"
            />
          </label>
        </p>
      </div>
    </fieldset>

    <fieldset class="filters__set">
      <legend class="filters__title">Наличие молока</legend>
    </fieldset>

    <fieldset class="filters__set">
      <legend class="filters__title">Страна произрастания</legend>
    </fieldset>

    <p class="filters__buttons">
      <button class="filters__submit" type="submit">Применить фильтр</button>
      <button class="filters__reset" type="reset">Сбросить фильтр</button>
    </p>
  </div>

  <div class="catalog__body">

  </div>
</form>

<form class="catalog" action="https://echo.htmlacademy.ru">
  <div class="filters">
    <fieldset class="filters__set">
      <legend class="filters__title">Цена</legend>

      <div class="range">
        <div class="range__target range__target--no-js"></div>

        <p class="range__fields">
          <label>
            <input
              class="field"
              name="price_from"
              type="number"
              min="0"
              max="1000"
              step="50"
              placeholder="0"
            />
          </label>
          <label>
            <input
              class="field"
              name="price_to"
              type="number"
              min="0"
              max="1000"
              step="50"
              value="900"
              placeholder="1000"
            />
          </label>
        </p>
      </div>
    </fieldset>

    <fieldset class="filters__set">
      <legend class="filters__title">Наличие молока</legend>

      <ul class="filters__list">
        {% for item in data.milkOptions %}
          <li class="filters__checker checker">
            <input
              class="checker__input checker__input--radio"
              id="milk-{{ loop.index }}"
              name="milk"
              type="radio"
              value="{{ item.value }}"
              {{ 'disabled' if item.disabled }}
            />
            <label class="checker__label" for="milk-{{ loop.index }}">{{ item.label }}</label>
          </li>
        {% endfor %}
      </ul>
    </fieldset>

    <fieldset class="filters__set">
      <legend class="filters__title">Страна произрастания</legend>

      <ul class="filters__list">
        {% for item in data.countries %}
          <li class="filters__checker filters__checker--checkboxes checker">
            <input
              class="checker__input checker__input--checkbox"
              id="country-{{ loop.index }}"
              name="countries[]"
              type="checkbox"
              value="{{ item.value }}"
              {{ 'checked' if item.checked }}
              {{ 'disabled' if item.disabled }}
            />
            <label class="checker__label" for="country-{{ loop.index }}">{{ item.label }}</label>
          </li>
        {% endfor %}
      </ul>
    </fieldset>

    <p class="filters__buttons">
      <button class="filters__submit" type="submit">Применить фильтр</button>
      <button class="filters__reset" type="reset">Сбросить фильтр</button>
    </p>
  </div>

  <div class="catalog__body">

  </div>
</form>
